<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:layout_marginStart="15dp"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="All fields are mandatory"
                android:padding="10dp"
                android:textColor="@color/red"/>
            <EditText
                android:id="@+id/name"
                android:layout_width="361dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="115dp"
                android:autofillHints=""
                android:ems="10"
                android:layout_marginTop="32dp"
                android:hint="Full Name"
                android:inputType="textEmailAddress"
                android:padding="15dp"
                tools:targetApi="o" />

            <EditText
                android:id="@+id/no"
                android:layout_width="361dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="115dp"
                android:autofillHints=""
                android:ems="10"
                android:hint=" Phone Number (Include country code)"
                android:inputType="textEmailAddress"
                android:padding="15dp"
                tools:targetApi="o" />

            <EditText
                android:id="@+id/identificationNo"
                android:layout_width="361dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="115dp"
                android:autofillHints=""
                android:ems="10"
                android:hint="National ID Number/Valid passport No."
                android:inputType="textEmailAddress"
                android:padding="15dp"
                tools:targetApi="o" />

            <EditText
                android:id="@+id/residCountry"
                android:layout_width="361dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="115dp"
                android:autofillHints=""
                android:ems="10"
                android:hint="Country of residence"
                android:inputType="textEmailAddress"
                android:padding="15dp"
                tools:targetApi="o" />
            <EditText
                android:id="@+id/category"
                android:layout_width="384dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="110dp"
                android:autofillHints=""
                android:ems="10"
                android:hint="Category (i.e Importer or Exporter)"
                android:inputType="textEmailAddress"
                android:padding="15dp"
                tools:targetApi="o" />

            <EditText
                android:id="@+id/goods"
                android:layout_width="384dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="110dp"
                android:autofillHints=""
                android:ems="10"
                android:hint="Products dealt in (e.g tea,coffee)"
                android:inputType="textEmailAddress"
                android:padding="15dp"
                tools:targetApi="o" />

            <EditText
                android:id="@+id/emailreg"
                android:layout_width="378dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="109dp"
                android:autofillHints=""
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="15dp"
                tools:targetApi="o" />

            <EditText
                android:id="@+id/passreg"
                android:layout_width="374dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="107dp"
                android:autofillHints=""
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="15dp"
                tools:targetApi="o" />

            <EditText
                android:id="@+id/cpass"
                android:layout_width="378dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="104dp"
                android:autofillHints=""
                android:ems="10"
                android:hint="confirm password"
                android:inputType="textPassword"
                android:padding="15dp"
                tools:targetApi="o" />

    <Button
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="187dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="15dp"
        android:text="Register" />

    <TextView
        android:id="@+id/LoginTextView"
        android:layout_width="235dp"
        android:layout_height="30dp"
        android:layout_marginEnd="91dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="15dp"
        android:text="Already a member?log in" />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>